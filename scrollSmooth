    <script type="text/javascript">
        var b = 0;
        var f = 0;
        var t = document.documentElement.scrollTop || document.body.scrollTop;
        var tt = t;

        setInterval(function(){
            t = document.documentElement.scrollTop || document.body.scrollTop;
            if(f<0.1 && f>0){
                tt = t;
            }else if(f>-0.1 && f<0){
                tt = t;
            }
            f = (t-b)/20;
            b+=f;
            $(".container").css({"transform":"translateY(-"+b+"px)","webkitTransform":"translateY(-"+b+"px)","MozTransform":"translateY(-"+b+"px)","msTransform":"translateY(-"+b+"px)","OTransform":"translateY(-"+b+"px)"});
        },16);
    </script>
